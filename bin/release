echo Preparing release infrastructure.
package.install npm
npm install release-it

echo Please enter release notes.
echo If your are done, enter "ยง".
echo You can enter multiple lines.

releaseNotes=$(read -d "ยง" line; echo "$line")
npm run release --git.changelog="$releaseNotes"
