echo.debug Executing '"'$1'"'.
if [ "$#" -ne 1 ]; then
	echo.error "Please quote commands that need to be executed."
	exit 1
fi
set -e
sh -c "$1" 2>&1 | xargs -n 1 -d '\n' echo.debug
if [ "$?" -eq "0" ]; then
	exit 0
else
	echo.error $output
	exit 1
fi
